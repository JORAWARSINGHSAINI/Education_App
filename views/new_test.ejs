<%- include ('partials/header') %>

    <title>New Class </title>


    <link rel="stylesheet" type="text/css" href="/css/student_dashboard.css">

    <body class="overlay-scrollbar">
        <%- include ('partials/messages.ejs') %>
        <!-- navbar -->
        <%- include ('partials/navbar.ejs') %>
            <!-- end navbar -->


            <!-- sidebar -->
            <%- include ('partials/teacher_sidebar.ejs') %>
                <!-- end sidebar -->
    <link rel="stylesheet" type="text/css" href="/css/style.css">
                        
                <!-- main content -->
                <div class="container">
                    <div class="img">
                        <img src="/img/Teacher_Logo.png">
                    </div>
                    <div class="login-content">

                        <form action="/new_test" method="POST">
                            
                                <h2 class="title">Create Test</h2>
                                <div class="input-div one">
                                    <div class="i">
                                        <i class="fas fa-smile-wink"></i>
                                    </div>
                                    <div class="div">
                                        <h5>Test Name</h5>
                                        <input type="text" class="input" name="name" required>
                                    </div>
                                </div>
                                <div class="input-div pass">
                                    <div class="i">
                                        <i class="fas fa-lock"></i>
                                    </div>
                                    <select name="classid" > 
                                        <% for(var i = 0; i < classes.length; i++) { %>
                                          <option value='<%= classes[i]._id %>'> <%= classes[i].name%> <%= classes[i].section   %> </option>
                                        <% } %>
                                      </select>
                                </div>
                                <div class="input-div one">
                                    <div class="i">
                                        <i class="fas fa-calendar"></i>
                                    </div>
                                    <div class="div">
                                        <input type="date" class="input" name="startdate" required>
                                    </div>
                                </div>
                                <div class="input-div one">
                                    <div class="i">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div class="div">
                                        <input type="time" class="input" name="starttime" required>
                                    </div>
                                </div>
                                
                                <div class="input-div one">
                                    <div class="i">
                                        <i class="fas fa-calendar"></i>
                                    </div>
                                    <div class="div">
                                        <input type="date" class="input" name="enddate" required>
                                    </div>
                                </div>
                                <div class="input-div one">
                                    <div class="i">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <div class="div">
                                        <input type="time" class="input" name="endtime" required>
                                    </div>
                                </div>
                                <div class="input-div one">
                                    <div class="i">
                                        <i class="fas fa-folder"></i>
                                    </div>
                                    <div class="div">
                                        <input type="file" class="input" name="file" >
                                    </div>
                                </div>

                                <input type="submit" class="btn" value="Create">
                        </form>
                    </div>
                </div>
    </body>

    <script type="text/javascript" src="/js/form_register_login.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
    <script type="text/javascript" src="/js/student_dashboard.js"></script>
    

    <!-- end import script -->
    <%- include ('partials/footer.ejs') %>