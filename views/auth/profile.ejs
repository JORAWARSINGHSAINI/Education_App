<%- include ('../partials/header') %>

    <title>Profile</title>


    <link rel="stylesheet" type="text/css" href="/css/student_dashboard.css">
<style>
    .profile_image:hover{
        box-shadow: 12px 12px 12px grey;
    }
    
</style>
    
    <body class="overlay-scrollbar">

        <%- include ('../partials/navbar.ejs') %>
            <%- include ('../partials/sidebar.ejs') %>
                <div class="wrapper">
                    <div class="container text-center" style="padding-top: 5rem;">
                        <% let src="/uploads/myImage-" + user._id +'.png' %>
                            <img class="profile_image" style="width: 10rem; height: 10rem; border-radius: 50%;" src=<%=src %> >
                            <form action="/profile" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">USERNAME</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1"
                                        aria-describedby="emailHelp" placeholder= <%= user.name %>>
 
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email address</label>
                                    <input type="email" class="form-control" id="exampleInputEmail1"
                                        aria-describedby="emailHelp" placeholder= <%= userinfo.email %>  >
 
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputEmail1">User Image</label>
                                    <input type="file" class="form-control" name="myImage">
 
                                </div>

                                
                                <button type="submit" class="btn btn-info">Change</button>
                            </form>


                    </div>
                </div>

    </body>
    <script type="text/javascript" src="/js/student_dashboard.js"></script>


    <!-- end import script -->
    <%- include ('../partials/footer.ejs') %>