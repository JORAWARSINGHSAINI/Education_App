<%- include ('../partials/header.ejs') %>
	<title>Register</title>
	<link rel="stylesheet" type="text/css" href="/css/style.css">

	</head>

	<body>
		<div style="position: relative; margin-top: 1.4rem; margin-right: 10rem;">
			<a href="/" style="text-decoration: none;  font-size: 2rem; color: black; font-weight: bold;">
				<img src="/img/logo.png" width="30rem" height="30rem">
				Education App
					</a>

		</div>
		<img class="wave" src="img/wave.png">
		<div class="container">
			<div class="img">
				<img src="/img/bg.svg">
			</div>
			<div class="login-content">

				<form action="/register" method="POST">
					<%- include ('../partials/messages.ejs') %>
						<link rel="stylesheet" type="text/css" href="/css/style.css">

						<img src="/img/Institution_logo.png">
						<h2 class="title">Register</h2>
						<div class="input-div one">
							<div class="i">
								<i class="fas fa-user"></i>
							</div>
							<div class="div">
								<h5>Name</h5>
								<input type="text" class="input" name="name" required>
							</div>
						</div>
						<div class="input-div one">
							<div class="i">
								<i class="fas fa-at"></i>
							</div>
							<div class="div">
								<h5>Email</h5>
								<input type="text" class="input" name="email" required>
							</div>
						</div>
						<div class="input-div pass">
							<div class="i">
								<i class="fas fa-lock"></i>
							</div>
							<div class="div">
								<h5>Password</h5>
								<input type="password" class="input" name="password" required>
							</div>
						</div>
						<div class="input-div pass">
							<div class="i">
								<i class="fas fa-lock"></i>
							</div>
							<div class="div">
								<h5>Confirm Password</h5>
								<input type="password" class="input" name="confirm_password" required>
							</div>
						</div>

	
						<div class="form-group">
							<select  name="type" class="form-control">
								<option value="student">Student</option>
								<option value="teacher">Teacher</option>
								<option value="institution">Institution</option>
							</select>
						  </div>
						<div class="form-group">
							<select name="institution" class="form-control"> 
								<% for(var i = 0; i < institutions.length; i++) { %>
								  <option value='<%= institutions[i]._id %>'><%= institutions[i].name  %></option>
								<% } %>
							  </select>
						  </div>

						<input type="submit" class="btn" value="Register">
						<a href="/login">Already have an account</a>
				</form>
			</div>

		</div>
		<%- include ('../partials/footer.ejs') %>
			<script type="text/javascript" src="/js/form_register_login.js"></script>