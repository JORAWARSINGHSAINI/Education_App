<%- include ('../partials/header.ejs') %>

	<title>
		<%- (typeof(user) !=='undefined' )? user.name : A %>'s Dashboard
	</title>


	<link rel="stylesheet" type="text/css" href="/css/student_dashboard.css">
	

		<body class="overlay-scrollbar">
			<!-- navbar -->
			<%- include ('../partials/navbar.ejs') %>
				<!-- end navbar -->


				<!-- sidebar -->
				<%- include ('../partials/institution_sidebar.ejs') %>
					<!-- end sidebar -->


					<!-- main content -->
					<div class="wrapper">
						<div class="row " >
							<div class="col-lg-12 col-m-12 col-sm-12  counter" >
								<h1 class="text-info"  style=" font-size: 6rem;"> <%= institution.name%> </h1>
							</div>

						</div>
						<div class="row" style="padding-top: 5rem;">
							<div class="col-lg-4 col-m-5 col-sm-5">
								<div class="counter bg-danger">
									<p>
										<i class="fas fa-child" style="font-size: 8rem;"></i>
									</p>
									<h3><%= institution.students.length%></h3>
									<p>STUDENTS</p>
								</div>
							</div>

							<div class="col-lg-4 col-m-5 col-sm-5">
								<div class="counter bg-warning">
									<p>
										<i class="fas fa-user-tie" style="font-size: 8rem;"></i>
									</p>
									<h3><%= institution.teachers.length %></h3>
									<p>TEACHERS</p>
								</div>
							</div>



							<div class="col-lg-4 col-m-6 col-sm-6">
								<div class="counter bg-info">
									<p>
										<i class="fas fa-chalkboard-teacher" style="font-size: 8rem;"></i>
									</p>
									<h3><%= institution.classes.length %></h3>
									<p>CLASSES</p>
								</div>
							</div>

						</div>

			
							
			<script type="text/javascript" src="/js/student_dashboard.js"></script>
										<!-- end import script -->
										<%- include ('../partials/footer.ejs') %>